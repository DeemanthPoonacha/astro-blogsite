---
import { Image } from "astro:assets";
import type { Author } from "../content/config";
import SocialLinks from "./SocialLinks.astro";
type Props = {
    author: Author;
};
const { author } = Astro.props;
---

<article class="border-2 flex flex-col items-center p-10 rounded-lg">
    <a
    href={`/authors/${author.slug}`}
    aria-label={`Read more about ${author.data.name}`}
    >
    {/* @ts-ignore */}
        <Image
            loading={"lazy"}
            src={author.data.image ?? "/images/icons/user.svg"}
            alt={author.data.name}
            width={200}
            height={200}
            format="webp"
            class="size-40 rounded-full shadow-xl mb-6 object-cover"
        />
    </a>

    <a
        href={`/authors/${author.slug}`}
        class="text-4xl prose dark:prose-invert mb-2 font-semibold inline-block"
    >
        {author.data.name}
    </a>

    <p class="prose dark:prose-invert mb-6 text-2xl line-clamp-2">
        {author.data.subtitle}
    </p>
    <SocialLinks social={author.data.social} />
</article>
