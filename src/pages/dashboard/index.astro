---
import H1 from "@/components/H1.astro";
import Layout from "@/layouts/Layout.astro";
import Main from "@/layouts/Main.astro";
import BlogDashboard from "@/components/BlogDahboard";
import { Author, Post, db, eq } from "astro:db";
import type { AuthorType } from "@/types";

const user = await Astro.locals.currentUser();
if (!user) return Astro.redirect("/404");

// Prepare the author data
const authorData: AuthorType = {
    id: user.id,
    email: user.emailAddresses[0]?.emailAddress ?? "",
    username: user.username ?? user.firstName ?? "",
    name: [user.firstName, user.lastName].filter(Boolean).join(" "),
    title: "Bloggy Author",
    image: user.imageUrl,
    bio: "I'm a new author on Bloggy, looking to share my thoughts and experiences with the world.",
    socialLinks: [
        {
            platform: "mail",
            link: `mailto:${user.emailAddresses[0]?.emailAddress}`,
        },
    ],
    createdAt: new Date(),
};

// Upsert author and get posts in minimal queries
const [author] = await db
    .insert(Author)
    .values(authorData)
    .onConflictDoUpdate({
        target: Author.id,
        set: {
            email: authorData.email,
            username: authorData.username,
            name: authorData.name,
            image: authorData.image,
        },
    })
    .returning();

// Fetch posts in parallel with the upsert
const posts = await db.select().from(Post).where(eq(Post.authorId, user.id));

// Combine user data with author and posts
const enrichedUser = {
    ...user,
    author,
    posts: posts ?? [],
};
