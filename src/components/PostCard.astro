---
import { Image } from "astro:assets";
import type { Post } from "../content/config";
import CategoryList from "./TagList.astro";
import { getEntryBySlug } from "astro:content";

type Props = {
    post: Post;
};

const { post } = Astro.props;

const author = await getEntryBySlug("authors", post.data.author);
---

<article
    class="flex flex-col justify-between overflow-hidden rounded-xl shadow-lg hover:shadow-2xl"
>
    <a
        href={`/blog/${post.slug}`}
        aria-label={`Read more about ${post.data.title}`}
        class="overflow-hidden"
    >
        <Image
            loading={"lazy"}
            src={post.data.image}
            alt={post.data.title}
            width={600}
            height={600 / 1.5}
            format="webp"
            class="aspect-[600/450] rounded-t-xl duration-300 hover:scale-110"
        />
    </a>

    <div class="flex flex-col justify-between p-4">
        <div class="">
            <CategoryList tags={post.data.tags} />
        </div>

        <a
            href={`/blog/${post.slug}`}
            class="text-4xl prose dark:prose-invert mb-4 font-semibold inline-block"
        >
            {post.data.title}
        </a>

        <p class="prose dark:prose-invert text-2xl mb-5 line-clamp-2">
            {post.body}
        </p>

        <div class="flex justify-between items-center">
            <span
                class="prose dark:prose-invert text-xl w-full flex justify-between"
            >
                {post.data.date}
                {
                    author ? (
                        <a
                            href={`/author/${author.slug}`}
                            class="prose dark:prose-invert text-lg"
                        >
                            {author.data.name}
                        </a>
                    ) : null
                }
            </span>
        </div>
    </div>
</article>
