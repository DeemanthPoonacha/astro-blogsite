---
import { Image } from "astro:assets";
import type { Post } from "../content/config";
import CategoryList from "./TagList.astro";
import { getEntryBySlug } from "astro:content";

type Props = {
    post: Post;
};

const { post } = Astro.props;

const author = await getEntryBySlug("authors", post.data.author);
---

<article class="">
    <a
        href={`/blog/${post.slug}`}
        aria-label={`Read more about ${post.data.title}`}
    >
        <Image
            loading={"lazy"}
            src={post.data.image}
            alt={post.data.title}
            width={600}
            height={600 / 1.5}
            format="webp"
            class="rounded-2xl shadow-xl mb-6 aspect-thumbnail object-cover"
        />
    </a>

    <div class="">
        <CategoryList tags={post.data.tags} />
    </div>

    <a
        href={`/blog/${post.slug}`}
        class="text-4xl prose dark:prose-invert mb-4 font-semibold inline-block"
    >
        {post.data.title}
    </a>

    <p class="prose dark:prose-invert text-2xl mb-9 line-clamp-2">
        {post.body}
    </p>

    <div class="flex justify-between items-center">
        <span
            class="prose dark:prose-invert text-xl w-full flex justify-between"
        >
            {post.data.date}
            {
                author ? (
                    <a
                        href={`/author/${author.slug}`}
                        class="prose dark:prose-invert text-lg"
                    >
                        {author.data.name}
                    </a>
                ) : null
            }
        </span>
    </div>
</article>
