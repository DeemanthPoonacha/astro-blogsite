---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Blog site for cars",
  image = "/images/main.jpeg",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <ViewTransitions />
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta property="og:image" content={image} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex justify-center">
    <div
      class="flex flex-col items-center justify-between h-screen px-24 max-sm:px-5 w-full max-w-7xl"
    >
      <Header />
      <slot />
      <footer class="w-full bg-black text-white">Footer</footer>
    </div>
  </body>
</html>
