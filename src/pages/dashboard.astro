---
import H1 from "../components/H1.astro";
import Layout from "../layouts/Layout.astro";
import Main from "../layouts/Main.astro";
const user = await Astro.locals.currentUser();
---

<Layout title="Dashboard | Bloggy">
    <Main className="w-full">
        <div class="w-full my-16 flex flex-col text-xl">
            <H1 text="Dashboard" />
            <div
                class="w-full my-16 text-center flex flex-col justify-center text-xl"
            >
                <p>Welcome, {user?.fullName}</p>
                <h1 class="mb-2 mt-8 text-7xl font-bold text-white">
                    Coming Soon
                </h1>
                <p>This page is still under construction, stay tuned!</p>
            </div>
        </div>
    </Main>
</Layout>
