---
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
    image?: string;
    showLogo?: boolean;
}

const {
    title,
    description = "The go-to place to discover and enjoy blogs on any topic that interests you!",
    image = "/images/main.jpeg",
    showLogo = true,
} = Astro.props;
---

<!doctype html>
<html lang="en" class="!scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta property="og:image" content={image} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon1.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <ClientRouter />
    </head>
    <body class="w-full justify-center">
        <div
            id="content"
            class="flex flex-col items-center justify-between h-screen"
        >
            <Header showLogo={showLogo} />
            <slot />
            <Footer />
        </div>
    </body>
</html>
